package labWork.labWork6;

import java.time.LocalDate;

public class Lab6Task {
    public static void main(String[] args) {
        LocalDate localDate = LocalDate.now();
        String currentMonth = localDate.getMonth().toString();
        int currentDate = localDate.getDayOfMonth();
        Months months = Months.valueOf(currentMonth);
        int numberOfDays = months.getNumberOfDays();
        int remainingDays = numberOfDays - currentDate;
        System.out.println(numberOfDays + " - " + currentDate + " = " + remainingDays + " Days left in " + currentMonth);
    }
}
